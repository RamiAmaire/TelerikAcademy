@model IEnumerable<TicketingSystem.Web.Models.TicketListViewModel>

@{
    ViewBag.Title = "Search result";
}

<h2>@ViewBag.Title</h2>
<div class="row-fluid" style="background-color: #4D4D4D; color: white; ">
    <div class="span2">
        <h3>Title</h3>
    </div>
    <div class="span2">
        <h3>Category</h3>
    </div>
    <div class="span2">
        <h3>Author</h3>
    </div>
    <div class="span2">
        <h3>Priority</h3>
    </div>
    <div class="span2">
        <h3>Details</h3>
    </div>
</div>

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="row-fluid" style="background-color: #4D4D4D; color: white; ">
            <div class="span2">
                <h4>@ticket.Title</h4>
            </div>
            <div class="span2">
                <h4>@ticket.CategoryName</h4>
            </div>
            <div class="span2">
                <h4>@ticket.AuthorName</h4>
            </div>
            <div class="span2">
                <h4>@ticket.Priority</h4>
            </div>
            <div class="span2">
                <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More details...</a></p>
            </div>
        </div>
    }
</div>