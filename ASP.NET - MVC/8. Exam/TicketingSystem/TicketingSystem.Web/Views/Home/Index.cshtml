@{
    ViewBag.Title = "TicketingSystem";  
}

@model IEnumerable<TicketingSystem.Web.Models.TicketViewModel>
<h2>@ViewBag.Title</h2>

<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <div>
                <h3>@ticket.Title</h3>
            </div>
            <div>
                <strong>Category: </strong>@ticket.CategoryName
            </div>
            <div>
                <strong>Author: </strong>@ticket.AuthorName
            </div>
            <div>
                @ticket.CommentsCount comments(s)
            </div>
            <div>
                <a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More details...</a>
            </div>
        </div>
    }

</div>