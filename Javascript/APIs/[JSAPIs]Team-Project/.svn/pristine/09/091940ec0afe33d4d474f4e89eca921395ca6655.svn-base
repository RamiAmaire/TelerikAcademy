body {
    margin:0;
    padding:0;
    border:none;
}
#gameInfo {
    margin-top: 15px;
    padding: 15px 15px 0 100px;
}
    #gameInfo span {
        display: inline-block;
        font-weight: bold;
        font-family: Arial;
    }
#Time, #MineCount {
    margin: 0 200px 0 10px;
    width: 70px;
}
#field-wrapper {
    float: left;
    background: #606060;
    padding: 2px;
    margin: 30px;
}
#field-wrapper button {
    margin: 2px;
    border: 0;
    border-radius: 4px; 
    width: 35px;
    height: 35px;
    font-weight: bold;
    font-size: 20px;
    color: #81B1E8;
}
.Mine {
    background-color: #FF2631;
}

.Flag {
    background-color: #FFF04E;
}

.Number {
    background-color: #eee;
}

.Cell {
    background-color: #81B1E8;
}
