body {
    margin:0;
    padding:0;
    border:none;
}
#gameInfo {
    border: 1px solid #000;
}
#field-wrapper {
    float: left;
    background: #606060;
    padding: 2px;
    margin: 50px;
}

#field-wrapper button {
    margin: 1px;
    border: none;
    border-radius: 4px; 
    width: 35px;
    height: 35px;
}
.Mine {
    background-color: red;
}

.Flag {
    background-color: yellow;
}

.Number {
    background-color:#0ff;
}

.Cell {
    background-color:#E6E6E6;
    font-weight: bold;
}
